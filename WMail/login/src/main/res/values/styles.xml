<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="title_radio_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/logsetting_server_select_title</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@drawable/loggsetting_server_select_textcolor_select</item>
    </style>

    <!-- Toolbar的样式   -->
    <style name="toolbar_style" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMargin">0dp</item>
    </style>

    <!-- Toolbar弹出菜单的样式   -->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:textSize">15sp</item>
        <!-- <item name="android:textColor">@android:color/white</item>  修改弹出菜单的字体颜色-->
        <item name="android:dropDownListViewStyle">@style/toolbar_menu_listStyle</item>
    </style>

    <!-- Toolbar主标题文字样式 -->
    <style name="toolbar_title_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <!-- Toolbar菜单文字的样式  -->
    <style name="toolbar_menu_style">
        <item name="actionMenuTextColor">#fff</item> <!--颜色-->
        <item name="android:textSize">14sp</item> <!--字体大小-->
    </style>

    <!-- 表示弹出菜单不覆盖锚点 -->
    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor">false</item>
    </style>
    <style name="toolbar_menu_listStyle" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:divider">@color/divider_color</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="item_setting_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_normal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="item_text_label_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="edit_logsetting_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/item_height_normal</item>
        <item name="android:background">@null</item>
        <item name="android:theme">@style/edit_them</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorHint">@color/text_grey</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 输入框样式 -->
    <style name="edit_them" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/text_grey</item><!-- AppCompatEditText选择的底线色彩 -->
        <item name="colorControlActivated">@color/text_title</item>  <!-- AppCompatEditText选中状态的颜色 -->
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider_color</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="select_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/blue_button_select_bg</item>
    </style>

    <style name="text_style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/text_grey</item>
        <item name="android:textColor">@color/text_black</item>
        <!-- 默认状态状态设置底线颜色 -->
        <item name="colorControlNormal">@color/text_black</item>
        <!-- 选择的底线颜色 -->
        <item name="colorControlActivated">@color/text_black</item>
        <item name="android:editTextBackground">@color/text_black</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
